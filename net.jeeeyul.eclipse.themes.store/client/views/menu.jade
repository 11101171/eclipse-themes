template(name="menu")
	#top-menu.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
		.container
			.navbar-header
				button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#menu-collapse")
					span.sr-only Toggle Navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="/about") Eclipse Theme Store
			
			#menu-collapse.collapse.navbar-collapse
				ul.nav.navbar-nav
					li(class="{{menuClass 'home'}}")
						a(href="{{pathFor 'home'}}").menu-item Recent
					li(class="{{menuClass 'toplike'}}")
						a(href="{{pathFor 'toplike'}}").menu-item Top
					li(class="{{menuClass 'post'}}")
						a(href="{{pathFor 'post'}}").menu-item Share
					if currentUser
						li.hidden-xs(class="{{menuClass 'profile'}}")
							a(href="{{pathFor 'profile'}}").menu-item {{username}}
					else
						li.hidden-xs
							+loginButtons