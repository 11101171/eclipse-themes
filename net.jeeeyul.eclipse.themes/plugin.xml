<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.e4.ui.css.swt.theme">
      <theme
            basestylesheeturi="css/chrome.css"
            id="net.jeeeyul.eclipse.themes.chrome"
            label="Jeeeyul&apos;s themes - Chrome Theme">
      </theme>
      <stylesheet
            uri="css/empty.css">
         <themeid
               refid="net.jeeeyul.eclipse.themes.chrome">
         </themeid>
         <osgiresourcelocator
               uri="platform:/plugin/net.jeeeyul.eclipse.themes/css/">
         </osgiresourcelocator>
      </stylesheet>
      <theme
            basestylesheeturi="css/minimalist.css"
            id="net.jeeeyul.eclipse.themes.minimalist"
            label="Jeeeyul&apos;s themes - Minimalist">
      </theme>
      <theme
            basestylesheeturi="css/minimalist-dark.css"
            id="net.jeeeyul.eclipse.themes.minimalist.dark"
            label="Jeeeyul&apos;s themes - Minimalist(Dark)">
      </theme>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.jeeeyul.eclipse.themes.preference.ChromePreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.ui.preferencePages.Views"
            class="net.jeeeyul.eclipse.themes.preference.ChromeThemePrefererncePage"
            id="net.jeeeyul.eclipse.themes.preference.ChromeThemePrefererncePage"
            name="%PreferencePageName">
      </page>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.e4.workbench.model">
      <processor
            beforefragment="true"
            class="net.jeeeyul.eclipse.themes.e4.ChromeProcessor">
      </processor>
   </extension>
   <extension
         point="org.eclipse.ui.preferenceTransfer">
       <!-- 
       	16: User can export their chrome theme preferences and reuse it with other workspace
		https://github.com/jeeeyul/eclipse-themes/issues/issue/16
		-->
      <transfer
            icon="icons/palette.gif"
            id="net.jeeeyul.eclipse.themes.transfer"
            name="%TransferName">
         <mapping
               scope="instance">
            <entry
                  node="net.jeeeyul.eclipse.themes">
            </entry>
         </mapping>
         <description>
            %TransferDescription
         </description>
      </transfer>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.core.propertyHandler">
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CTabFolderElement"
            composite="false"
            handler="net.jeeeyul.eclipse.themes.css.ChromeCSSPropertyHandler">
         <property-name
               name="chrome-selected-tab-color">
         </property-name>
         <property-name
               name="chrome-unselected-tab-color">
         </property-name>
         <property-name
               name="chrome-shiney-shadow">
         </property-name>
         <property-name
               name="chrome-selected-tab-fill-highlight">
         </property-name>
      </handler>
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CompositeElement"
            handler="net.jeeeyul.eclipse.themes.css.CompositeBorderHandler">
         <property-name
               name="chrome-border-top-color">
         </property-name>
         <property-name
               name="chrome-border-top-visible">
         </property-name>
         <property-name
               name="chrome-border-bottom-color">
         </property-name>
         <property-name
               name="chrome-border-bottom-visible">
         </property-name>
         <property-name
               name="chrome-border-left-color">
         </property-name>
         <property-name
               name="chrome-border-left-visible">
         </property-name>
         <property-name
               name="chrome-border-right-color">
         </property-name>
         <property-name
               name="chrome-border-right-visible">
         </property-name>
      </handler>
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CompositeElement"
            handler="net.jeeeyul.eclipse.themes.css.CompositePaddingHandler">
         <property-name
               name="chrome-padding-top">
         </property-name>
         <property-name
               name="chrome-padding-left">
         </property-name>
         <property-name
               name="chrome-padding-right">
         </property-name>
         <property-name
               name="chrome-padding-bottom">
         </property-name>
      </handler>
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CompositeElement"
            handler="net.jeeeyul.eclipse.themes.css.PerspectiveSwitcherCSSHandler">
         <property-name
               name="chrome-show-perspective-name">
         </property-name>
      </handler>
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CompositeElement"
            handler="net.jeeeyul.eclipse.themes.css.StyleTextLineHandler">
         <property-name
               name="chrome-line-style">
         </property-name>
         <property-name
               name="chrome-line-color">
         </property-name>
      </handler>
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CompositeElement"
            handler="net.jeeeyul.eclipse.themes.css.SashWidthHandler">
         <property-name
               name="jeeeyul-sash-width">
         </property-name>
      </handler>
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CTabFolderElement"
            handler="net.jeeeyul.eclipse.themes.css.KTabRendererCSSPropertyHandler">
         <property-name
               name="jeeeyul-tab-border-color">
         </property-name>
         <property-name
               name="jeeeyul-tab-selected-border-color">
         </property-name>
         <property-name
               name="jeeeyul-tab-unselected-border-color">
         </property-name>
         <property-name
               name="jeeeyul-tab-border-radius">
         </property-name>
         <property-name
               name="jeeeyul-tab-border-width">
         </property-name>
         <property-name
               name="jeeeyul-tab-spacing">
         </property-name>
         <property-name
               name="jeeeyul-tab-close-button-color">
         </property-name>
         <property-name
               name="jeeeyul-tab-close-button-hot-color">
         </property-name>
         <property-name
               name="jeeeyul-tab-close-button-active-color">
         </property-name>
         <property-name
               name="jeeeyul-tab-close-button-line-width">
         </property-name>
         <property-name
               name="jeeeyul-tab-unselected-tabs-background">
         </property-name>
      </handler>
   </extension>

</plugin>
