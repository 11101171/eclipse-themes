<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.e4.ui.css.swt.theme">
      <theme
            basestylesheeturi="css/chrome.css"
            id="net.jeeeyul.eclipse.themes.chrome"
            label="Jeeeyul&apos;s themes - Chrome Theme">
      </theme>
      <stylesheet
            uri="css/empty.css">
         <themeid
               refid="net.jeeeyul.eclipse.themes.chrome">
         </themeid>
         <osgiresourcelocator
               uri="platform:/plugin/net.jeeeyul.eclipse.themes/css/">
         </osgiresourcelocator>
      </stylesheet>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.jeeeyul.eclipse.themes.preference.ChromePreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.ui.preferencePages.Views"
            class="net.jeeeyul.eclipse.themes.preference.ChromeThemePrefererncePage"
            id="net.jeeeyul.eclipse.themes.preference.ChromeThemePrefererncePage"
            name="Chrome Theme">
      </page>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.e4.workbench.model">
      <processor
            beforefragment="true"
            class="net.jeeeyul.eclipse.themes.e4.ChromeProcessor">
      </processor>
   </extension>
   <extension
         point="org.eclipse.ui.preferenceTransfer">
       <!-- 
       	16: User can export their chrome theme preferences and reuse it with other workspace
		https://github.com/jeeeyul/eclipse-themes/issues/issue/16
		-->
      <transfer
            icon="icons/palette.gif"
            id="net.jeeeyul.eclipse.themes.transfer"
            name="Chrome Theme Settings">
         <mapping
               scope="instance">
            <entry
                  node="net.jeeeyul.eclipse.themes">
            </entry>
         </mapping>
         <description>
            Exports Chrome Theme preference settings.
         </description>
      </transfer>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.core.propertyHandler">
      <handler
            adapter="org.eclipse.e4.ui.css.swt.dom.CTabFolderElement"
            composite="false"
            handler="net.jeeeyul.eclipse.themes.css.ChromeCSSPropertyHandler">
         <property-name
               name="chrome-selected-tab-color">
         </property-name>
         <property-name
               name="chrome-unselected-tab-color">
         </property-name>
         <property-name
               name="chrome-shiney-shadow">
         </property-name>
         <property-name
               name="chrome-selected-tab-fill-highlight">
         </property-name>
      </handler>
      <handler
            adapter="net.jeeeyul.eclipse.themes.e4.StyledTextElement"
            handler="net.jeeeyul.eclipse.themes.css.StyledTextCSSHandler">
         <property-name
               name="chrome-line-color">
         </property-name>
         <property-name
               name="chrome-line-dash">
         </property-name>
         <property-name
               name="chrome-line-visible">
         </property-name>
      </handler>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.core.elementProvider">
      <provider
            class="net.jeeeyul.eclipse.themes.e4.StyledTextElementProvider">
         <widget
               class="org.eclipse.swt.custom.StyledText">
         </widget>
      </provider>
   </extension>

</plugin>
